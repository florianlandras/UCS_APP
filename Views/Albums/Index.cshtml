@model IEnumerable<UCS_APP.Models.Album>

@{
    ViewData["Title"] = "Index";
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</head>

<body>

    <nav class="navbar navbar-expand" style="background-color : #724694;">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1" style="color: #fff">Albums</span>
            <span>
                @Html.ActionLink("Class by Alphabetic order", "Index", new {sortOrder = ViewBag.NameSortParm}, new {@style="color:#fff;" } )
            </span>
            <ul class="navbar-nav ml-auto">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <form class="d-flex" role="search">
                        <span style="color: #fff"> Find by Name : </span>
                        @Html.TextBox("SearchString")<input type="submit" value="search" />
                    </form>
                </div>
            </ul>


        </div>

    </nav>

    <div class="container text-center">
        <div class="row row-cols-3">

            @foreach (var item in Model)
            {


                <div class="col">

                    <div class="container-fluid border my-3 text-center" style="height:150px;width:150px; background-color:#724694; text-align:center">

                        @Html.ActionLink( @item.Title, "Details" , "Photos", new {id = item.Id}, new{@style="color:#ffffff;"})
                    </div>

                </div>
            }

            @if (Model.Count() == 0)
            {
                <div>
                    No Albums found
                </div>
            }

        </div>
    </div>
</body>

</html>
